# ==========================================
# Travel Service - Production Environment
# ==========================================
# Production-ready template with security best practices

# ==========================================
# App Configuration
# ==========================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_HOST=your-db-host.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_USER=travel_app
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=travel_production

# IMPORTANT: These should be FALSE in production
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=your-redis-host.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ==========================================
# Cache Configuration
# ==========================================
CACHE_TTL=600
CACHE_MAX=1000

# ==========================================
# Queue Configuration
# ==========================================
QUEUE_CONCURRENCY=10

# ==========================================
# Security & CORS
# ==========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=50

# ==========================================
# JWT Authentication (REQUIRED - MUST CHANGE!)
# ==========================================
JWT_SECRET=CHANGE_ME_USE_STRONG_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_USE_DIFFERENT_STRONG_RANDOM_STRING_MIN_32_CHARS
JWT_ISSUER=travel-service
JWT_AUDIENCE=travel-app
JWT_ACCESS_EXPIRATION=3600      # 1 hour (more secure than dev)
JWT_REFRESH_EXPIRATION=604800   # 7 days

# ==========================================
# LLM Provider Configuration (REQUIRED)
# ==========================================
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-proj-CHANGE_ME_YOUR_PRODUCTION_KEY
OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_PROJECT_ID=proj-xxx
# OPENAI_ORGANIZATION_ID=org-xxx

# ==========================================
# Google Maps API
# ==========================================
GOOGLE_MAPS_API_KEY=CHANGE_ME_YOUR_GOOGLE_MAPS_KEY

# ==========================================
# Vector Search Configuration
# ==========================================
VECTOR_SEARCH_MODE=hnsw
VECTOR_HNSW_M=16
VECTOR_HNSW_EF_CONSTRUCTION=64

# ==========================================
# Context Builder Configuration
# ==========================================
CONTEXT_BUILDER_MAX_TOKENS=8000
CONTEXT_BUILDER_MESSAGE_LIMIT=30
CONTEXT_BUILDER_EMBEDDING_TOP_K=10
CONTEXT_BUILDER_EMBEDDING_THRESHOLD=0.7
CONTEXT_BUILDER_JOB_LIMIT=5
CONTEXT_BUILDER_LONG_MESSAGE_THRESHOLD=1000

# ==========================================
# Memory Compression Configuration
# ==========================================
MEMORY_COMPRESSION_ENABLED=true
MEMORY_COMPRESSION_ARCHIVE_THRESHOLD=2000
MEMORY_COMPRESSION_INACTIVE_PLAN_DAYS=30
MEMORY_COMPRESSION_DEFAULT_MODE=light
MEMORY_COMPRESSION_MIN_EMBEDDINGS_THRESHOLD=50
MEMORY_COMPRESSION_PRESERVE_RECENT_COUNT=20
MEMORY_COMPRESSION_ACTIVE_CONVERSATION_DAYS=7
